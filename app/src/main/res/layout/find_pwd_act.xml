<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
<include layout="@layout/app_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!--your view-->
            <com.github.fastshape.MyLinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                app:solidColor="@color/white"
                app:borderColor="@color/my_login_border"
                app:all_line="true"
                app:radius="3dp"
                android:paddingRight="10dp"
                app:borderWidth="2px"
                >
                <com.github.fastshape.MyTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:gravity="center"
                    android:textColor="@color/theme_text2"
                    android:textSize="15sp"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="@color/my_login_border"
                    />
                <com.sk.xyrs.view.MyEditText
                    android:id="@+id/et_findpwd_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="@color/theme_text2"
                    android:textColorHint="@color/hint_text"
                    android:hint="请输入手机号"
                    />

            </com.github.fastshape.MyLinearLayout>
            <com.sk.xyrs.view.MyEditText
                android:id="@+id/et_findpwd_code"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="8"
                android:textSize="14sp"
                android:textColor="@color/theme_text2"
                android:textColorHint="@color/hint_text"
                android:hint="请输入短信验证码"
                app:borderColor="@color/my_login_border"
                app:all_line="true"
                app:radius="3dp"
                app:borderWidth="2px"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                />
            <com.sk.xyrs.view.MyEditText
                android:id="@+id/et_findpwd_pwd"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:imeOptions="actionNext"
                android:inputType="textWebPassword"
                android:textSize="14sp"
                android:textColor="@color/theme_text2"
                android:textColorHint="@color/hint_text"
                android:hint="请输入账户密码"
                app:borderColor="@color/my_login_border"
                app:all_line="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                app:radius="3dp"
                app:borderWidth="2px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码为8-20位,至少包含字符/字母、符号2种组合"
                android:textColor="@color/theme_text2"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:id="@+id/tv_findpwd_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="获取验证码"
                    android:textColor="@color/theme_text1"
                    android:gravity="center"
                    android:ems="5"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="或"
                    android:textColor="@color/theme_text2"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_findpwd_getyuyin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="获取语音验证码"
                    android:textColor="@color/theme_text1"
                    android:gravity="center"
                    android:ems="7"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_findpwd_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/queding"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
</LinearLayout>