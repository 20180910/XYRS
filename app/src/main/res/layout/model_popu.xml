<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_yejianmoshi"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="夜间模式"
        android:textColor="@color/theme_text1"
        android:layout_marginLeft="10dp"
        />
    <com.suke.widget.SwitchButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sb_show_indicator="false"
        app:sb_checked="false"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shouye_icon_xianshi"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="阅读字号"
            android:textColor="@color/theme_text1"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white"
            >
            <com.github.fastshape.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="小"
                android:layout_marginRight="15dp"
                android:textColor="@color/theme_text2"
                android:textSize="16sp"
                />
            <com.github.fastshape.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="中"
                android:layout_marginRight="15dp"
                android:textColor="@color/theme_text2"
                android:textSize="16sp"
                app:bottom_line="true"
                app:borderColor="@color/theme_text2"
                app:borderWidth="1dp"
                />
            <com.github.fastshape.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="大"
                android:layout_marginRight="15dp"
                android:textColor="@color/theme_text2"
                android:textSize="16sp"
                />
            <com.github.fastshape.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="特大"
                android:textColor="@color/theme_text2"
                android:textSize="16sp"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/divider_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/theme_text1"
        />
</LinearLayout>