<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <!--your view-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="笔会名"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text1"
                    android:ems="4"
                    />
                <com.sk.xyrs.view.MyEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:solidColor="@color/white"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:hint="请输入笔会名"
                    android:textColorHint="@color/hint_text"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jiantou_right"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/background_f2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签名简介"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text1"
                    android:ems="4"
                    />

                <com.sk.xyrs.view.MyEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="13sp"
                    app:solidColor="@color/white"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:hint="请输入简介"
                    android:textColorHint="@color/hint_text"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jiantou_right"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/background_f2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地区"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text1"
                    android:ems="4"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="上海市"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text2"
                    android:hint="请选择地区"
                    android:paddingLeft="7dp"
                    android:textColorHint="@color/hint_text"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jiantou_right"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/background_f2"
                />
        </LinearLayout>
        <com.github.fastshape.MyTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="保存"
            android:textSize="17sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            app:solidColor="@color/theme_text2"
            android:textColor="@color/white"
            app:radius="5dp"
            app:all_line="true"
            />
    </com.library.base.ProgressLayout>
</LinearLayout>