<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_above="@+id/ll_fatie_bottom"
            >
            <!--your view-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_title_height"
                >
                <ImageView
                    android:id="@+id/iv_fatie"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:src="@drawable/title_close"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0字"
                    android:layout_toRightOf="@+id/iv_fatie"
                    android:layout_centerVertical="true"
                    android:textColor="@color/theme_text2"
                    android:textSize="15sp"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_fatie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投稿"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    app:solidColor="@color/theme_text2"
                    android:textColor="@color/white"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:radius="4dp"
                    />
                <com.github.fastshape.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    app:solidColor="@color/theme_text2"
                    android:textColor="@color/white"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:radius="4dp"
                    android:layout_toLeftOf="@+id/tv_fatie"
                    />
            </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="2px"
               android:background="@color/background_f2"
               />
            <com.sk.xyrs.view.MyEditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:solidColor="@color/white"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textColorHint="@color/hint_text"
                android:hint="请输入标题"
                android:textColor="@color/theme_text2"
                android:paddingLeft="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/background_f2"
                />
            <com.github.fastshape.MyEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:textSize="16sp"
                app:solidColor="@color/white"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textColorHint="@color/hint_text"
                android:hint="请输入正文"
                android:textColor="@color/theme_text2"
                android:padding="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fatie_bottom"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/theme_text5"
            android:layout_alignParentBottom="true"
            >
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/icon_a"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/fabiao_icon_huiche"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/fabiao_icon_huiche02"
                android:background="@null"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/fabiao_icon_jianpan"
                android:background="@null"
                />
        </LinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>