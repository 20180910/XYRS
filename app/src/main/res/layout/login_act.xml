<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >
<android.support.v4.widget.NestedScrollView
        android:id="@id/nsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.github.fastshape.MyRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_title_height"
                app:bottom_line="true"
                app:solidColor="@color/white"
                >

                <TextView
                    android:id="@+id/tv_pwd_login"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="密码登录"
                    android:textColor="@color/theme_text1"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:id="@+id/iv_pwd_login_close"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="12dp"
                    android:src="@drawable/title_close"
                    />
            </com.github.fastshape.MyRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <!--your view-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="手机验证码登录"
                    android:textColor="@color/theme_text1"
                    android:textSize="16sp"
                    />

                <com.github.fastshape.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="30dp"
                    app:solidColor="@color/white"
                    app:borderColor="@color/my_login_border"
                    app:all_line="true"
                    app:radius="3dp"
                    android:paddingRight="10dp"
                    app:borderWidth="2px"
                    >
                    <com.github.fastshape.MyTextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="+86"
                        android:gravity="center"
                        android:textColor="@color/theme_text2"
                        android:textSize="14sp"
                        />
                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/my_login_border"
                        />
                    <com.sk.xyrs.view.MyEditText
                        android:id="@+id/et_login_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:textColor="@color/theme_text2"
                        android:textColorHint="@color/hint_text"
                        android:hint="请输入手机号"
                        />

                </com.github.fastshape.MyLinearLayout>
                <com.github.fastshape.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:solidColor="@color/white"
                    app:borderColor="@color/my_login_border"
                    app:all_line="true"
                    app:radius="3dp"
                    app:borderWidth="2px"
                    >
                    <com.sk.xyrs.view.MyEditText
                        android:id="@+id/et_login_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:textColor="@color/theme_text2"
                        android:textColorHint="@color/hint_text"
                        android:hint="请输入短信验证码"
                        />

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/my_login_border"
                        />

                    <com.github.fastshape.MyTextView
                        android:id="@+id/tv_login_getcode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:textColor="@color/theme_text2"
                        android:textSize="14sp"
                        android:ems="5"
                        />
                </com.github.fastshape.MyLinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp">
                    <LinearLayout
                        android:id="@+id/ll_login_disanfang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他登录方式"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/theme_text3"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            >
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/qq"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wechat"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/weibo"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_login_queding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收不到短信?获取"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/theme_text2"
                                />
                            <TextView
                                android:id="@+id/tv_login_yuyin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="语音验证码"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/theme_text1"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center_horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="继续表示您同意"
                                android:textColor="@color/theme_text2"
                                />
                            <TextView
                                android:id="@+id/tv_login_xieyi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="《相约榕树协议》"
                                android:textColor="@color/theme_text1"
                                />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_login_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/queding"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            />
                    </LinearLayout>
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_login_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录遇到问题?"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/theme_text2"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>