<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
    >
    <include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@id/nsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_d"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@color/bg_color"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <com.github.fastshape.MyTextView
                            android:id="@+id/tv_my_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="李东"
                            android:textColor="@color/theme_text1"
                            android:textSize="19sp"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="2px"
                            />
                        <com.github.fastshape.MyTextView
                            android:id="@+id/tv_my_recharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值"
                            app:borderColor="@color/theme_text2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            app:radius="3dp"
                            android:textColor="@color/theme_text2"
                            app:all_line="true"
                            android:layout_marginRight="10dp"
                            />
                        <com.github.fastshape.MyTextView
                            android:id="@+id/tv_my_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="编辑资料"
                            app:borderColor="@color/theme_text2"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            app:radius="3dp"
                            android:textColor="@color/theme_text2"
                            app:all_line="true"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_my_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="生活不止诗和远方~"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/theme_text1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/bg_color"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_rongshuye"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="榕树叶:&#8194;"
                        android:textColor="@color/theme_text2"
                        android:layout_marginLeft="5dp"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/tv_my_shuye_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="699"
                        android:textColor="@color/theme_text1"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/bg_color"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bg_color"
                        android:gravity="center"
                        android:padding="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_my_kabao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0"
                            android:textColor="@color/theme_text1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="卡包"
                            android:textColor="@color/theme_text2"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bg_color"
                        android:gravity="center"
                        android:padding="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_my_guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0"
                            android:textColor="@color/theme_text1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"
                            android:textColor="@color/theme_text2"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bg_color"
                        android:gravity="center"
                        android:padding="10dp"
                        >
                        <TextView
                            android:id="@+id/tv_my_fensi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="0"
                            android:textColor="@color/theme_text1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝"
                            android:textColor="@color/theme_text2"
                            android:layout_marginTop="4dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/background_f2"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bg_color"
                        android:gravity="center"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="加入"
                            android:textColor="@color/theme_text1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="的笔友会"
                            android:textColor="@color/theme_text1"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bg_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingRight="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="创业经验"
                            android:textSize="11sp"
                            android:textColor="@color/theme_text1"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/bg_color"
                            android:layout_marginTop="5dp"
                            >
                            <com.github.fastshape.MyTextView
                                android:id="@+id/tv_my_make_flag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="一代文豪"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                app:solidColor="@color/theme_text2"
                                android:textColor="@color/white"
                                app:radius="5dp"
                                android:textSize="10sp"
                                android:layout_marginRight="10dp"
                                />
                            <com.willy.ratingbar.BaseRatingBar
                                android:id="@+id/brb_my_make_num"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                app:srb_clickable="false"
                                app:srb_numStars="5"
                                app:srb_rating="3"
                                app:srb_minimumStars="1"
                                app:srb_starWidth="12dp"
                                app:srb_starHeight="12dp"
                                app:srb_starPadding="1dp"
                                app:srb_drawableFilled="@drawable/star_select"
                                app:srb_drawableEmpty="@drawable/star_nomal"
                                >
                            </com.willy.ratingbar.BaseRatingBar>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wode_icon_wen"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:layout_marginTop="6dp"
                            >
                            <TextView
                                android:id="@+id/tv_my_make_current_exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="1212"
                                android:textColor="@color/theme_text2"
                                android:textSize="11sp"
                                />
                            <TextView
                                android:id="@+id/tv_my_make_max_exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="/6000"
                                android:textColor="@color/theme_text1"
                                android:textSize="11sp"
                                />
                            <com.github.progress.MyProgress
                                android:id="@+id/mp_make_exp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="4dp"
                                android:layout_marginLeft="10dp"
                                app:borderWidth="1px"
                                android:layerType="none"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/bg_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingRight="15dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阅读经验"
                            android:textSize="11sp"
                            android:textColor="@color/theme_text1"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/bg_color"
                            android:layout_marginTop="5dp"
                            >
                            <com.github.fastshape.MyTextView
                                android:id="@+id/tv_my_read_flag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="博览群书"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                app:solidColor="@color/theme_text2"
                                android:textColor="@color/white"
                                app:radius="5dp"
                                android:textSize="10sp"
                                android:layout_marginRight="10dp"
                                />
                            <com.willy.ratingbar.BaseRatingBar
                                android:id="@+id/brb_my_read_num"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                app:srb_clickable="false"
                                app:srb_numStars="5"
                                app:srb_rating="3"
                                app:srb_minimumStars="1"
                                app:srb_starWidth="12dp"
                                app:srb_starHeight="12dp"
                                app:srb_starPadding="1dp"
                                app:srb_drawableFilled="@drawable/star_select"
                                app:srb_drawableEmpty="@drawable/star_nomal"
                                >
                            </com.willy.ratingbar.BaseRatingBar>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wode_icon_wen"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:layout_marginTop="6dp"
                            >
                            <TextView
                                android:id="@+id/tv_my_read_current_exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="1212"
                                android:textColor="@color/theme_text2"
                                android:textSize="11sp"
                                />
                            <TextView
                                android:id="@+id/tv_my_read_max_exp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="/6000"
                                android:textColor="@color/theme_text1"
                                android:textSize="11sp"
                                />
                            <com.github.progress.MyProgress
                                android:id="@+id/mp_read_exp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="4dp"
                                android:layout_marginLeft="10dp"
                                app:borderWidth="1px"
                                android:layerType="software"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdwz"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="我的文章"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wode_icon_wenzhang"
                    app:left_width="14dp"
                    app:solidColor="@color/white"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:paddingRight="13dp"
                    android:paddingLeft="13dp"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdtz"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:left_width="17dp"
                    app:solidColor="@color/white"
                    android:text="我的帖子"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wodetiezi"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingRight="13dp"
                    android:paddingLeft="12dp"
                    android:layout_marginBottom="2px"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdtj"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:left_width="14dp"
                    app:solidColor="@color/white"
                    android:text="我的推荐"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wode_icon_tuijian"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingRight="13dp"
                    android:paddingLeft="13dp"
                    />

                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdfs"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:left_width="14dp"
                    app:solidColor="@color/white"
                    android:text="我的分享"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wode_icon_fenxiang"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingRight="13dp"
                    android:paddingLeft="13dp"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdxx"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:solidColor="@color/white"
                    android:text="我的消息"
                    android:textSize="15sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wodexiaoxi"
                    android:drawablePadding="7dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingRight="13dp"
                    android:paddingLeft="10dp"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdkb"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:left_width="17dp"
                    app:solidColor="@color/white"
                    android:text="我的卡包"
                    android:textSize="16sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wode_icon_kabao"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingRight="13dp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="2px"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdsc"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:left_width="16dp"
                    app:solidColor="@color/white"
                    android:text="我的收藏"
                    android:textSize="16sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wode_icon_shoucang"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingRight="13dp"
                    android:paddingLeft="11dp"
                    />
                <com.github.fastshape.MyTextView
                    android:id="@+id/tv_my_wdlljl"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:left_width="17dp"
                    app:solidColor="@color/white"
                    android:text="我的浏览记录"
                    android:textSize="16sp"
                    android:textColor="@color/theme_text2"
                    android:drawableLeft="@drawable/wode_liulanjilu"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/jiantou_right2"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingRight="13dp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="2px"
                    />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </com.library.base.ProgressLayout>


</LinearLayout>