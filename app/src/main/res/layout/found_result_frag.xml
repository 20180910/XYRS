<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:fitsSystemWindows="true"
    >
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <!--your view-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="文章"
                android:paddingLeft="10dp"
                android:textColor="@color/theme_text1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/background_f2"
                />
            <com.library.base.view.MyRecyclerView
                android:id="@+id/rv_found_result_wenzhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </com.library.base.view.MyRecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/background_f2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="用户"
                android:paddingLeft="10dp"
                android:textColor="@color/theme_text1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/background_f2"
                />
            <com.library.base.view.MyRecyclerView
                android:id="@+id/rv_found_result_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </com.library.base.view.MyRecyclerView>
        </LinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>