<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >
<android.support.v4.widget.NestedScrollView
        android:id="@id/nsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.github.fastshape.MyRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_title_height"
                app:bottom_line="true"
                app:solidColor="@color/white"
                >

                <TextView
                    android:id="@+id/tv_pwd_login"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="密码登录"
                    android:textColor="@color/theme_text1"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:id="@+id/iv_pwd_login_close"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="12dp"
                    android:src="@drawable/title_close"
                    />
            </com.github.fastshape.MyRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <!--your view-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="手机验证码登录"
                    android:textColor="@color/theme_text1"
                    android:textSize="16sp"
                    />

                <com.github.fastshape.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_margin="30dp"
                    app:solidColor="@color/white"
                    app:borderColor="@color/my_login_border"
                    app:all_line="true"
                    app:radius="3dp"
                    android:paddingRight="10dp"
                    app:borderWidth="1px"
                    >
                    <com.github.fastshape.MyTextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="+86"
                        android:gravity="center"
                        android:textColor="@color/theme_text2"
                        android:textSize="15sp"
                        />
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/my_login_border"
                        />
                    <com.github.fastshape.MyEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColor="@color/theme_text2"
                        android:textColorHint="@color/hint_text"
                        android:hint="请输入手机号"
                        />

                </com.github.fastshape.MyLinearLayout>
                <com.github.fastshape.MyLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:solidColor="@color/white"
                    app:borderColor="@color/my_login_border"
                    app:all_line="true"
                    app:radius="3dp"
                    app:borderWidth="1px"
                    >
                    <com.github.fastshape.MyEditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textSize="15sp"
                        android:textColor="@color/theme_text2"
                        android:textColorHint="@color/hint_text"
                        android:hint="请输入短信验证码"
                        />
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/my_login_border"
                        />
                    <com.github.fastshape.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="获取验证码"
                        android:gravity="center"
                        android:textColor="@color/theme_text2"
                        android:textSize="15sp"
                        android:ems="5"
                        />
                </com.github.fastshape.MyLinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他登录方式"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="70dp"
                    android:textColor="@color/theme_text2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录遇到问题?"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="70dp"
                    android:textColor="@color/theme_text2"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>