<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
<include layout="@layout/app_title"/>
    <com.library.base.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_above="@+id/ll_chat_bottom"
            >
            <!--your view-->
            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@id/pcfl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ptr_resistance="2.1"
                app:ptr_ratio_of_header_height_to_refresh="1.2"
                >
                <com.library.base.view.MyRecyclerView
                    android:id="@+id/rv_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    >
                </com.library.base.view.MyRecyclerView>
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        </LinearLayout>
        <com.github.fastshape.MyLinearLayout
            android:id="@+id/ll_chat_bottom"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:solidColor="@color/white"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            app:top_line="true"
            >
            <com.sk.xyrs.view.MyEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="13sp"
                app:solidColor="@color/white"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:hint="请输入您想要回复的消息..."
                android:textColorHint="@color/hint_text"
                android:textColor="@color/theme_text2"
                app:radius="18dp"
                app:borderColor="@color/theme_text3"
                app:all_line="true"
                />
        </com.github.fastshape.MyLinearLayout>
    </com.library.base.ProgressLayout>
</LinearLayout>